# Change directory
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias .......='cd ../../../../../..'

# Cargo commands
alias cb='cargo build'
alias cch='cargo check'
alias cf='cargo fmt -v'
alias ci='cargo install'
alias cr='cargo run'
alias crr='cargo run --release'
alias ct='cargo test'
alias cw='cargo watch'
alias cwr='cargo watch -x run'

# Change directory overrides
alias cdp='cd ~/projects'
alias cdw='cd ~/work'

# Safety override
alias chgrp='chgrp --preserve-root'
alias chmod='chmod --preserve-root'
alias chown='chown --preserve-root'
alias cp='cp -i'
alias mkdir='mkdir -pv'
alias mv='mv -i'
alias rm='rm -I --preserve-root'

# Docker aliases
alias dbl='docker build'
alias dcin='docker container inspect'
alias dcls='docker container ls'
alias dclsa='docker container ls -a'
alias dib='docker image build'
alias dii='docker image inspect'
alias dils='docker image ls'
alias dipu='docker image push'
alias dirm='docker image rm'
alias dit='docker image tag'
alias dlo='docker container logs'
alias dnc='docker network create'
alias dncn='docker network connect'
alias dndcn='docker network disconnect'
alias dni='docker network inspect'
alias dnls='docker network ls'
alias dnrm='docker network rm'
alias dpo='docker container port'
alias dpu='docker pull'
alias dr='docker container run'
alias drit='docker container run -it'
alias drm='docker container rm'
alias drs='docker container restart'
alias dst='docker container start'
alias dsta='docker stop $(docker ps -q)'
alias dstp='docker container stop'
alias dtop='docker top'
alias dvi='docker volume inspect'
alias dvls='docker volume ls'
alias dvprune='docker volume prune'
alias dxc='docker container exec'
alias dxcit='docker container exec -it'

# Git aliases
alias ga='git add'
alias gb='git branch'
alias gbD='git branch -D'
alias gbd='git branch -d'
alias gbl='git blame -b -w'
alias gc='git commit -v --amend'
alias gc='git commit'
alias gcb='git checkout -b'
alias gcm='git commit -m'
alias gco='git checkout'
alias gcp='git cherry-pick'
alias gcpa='git cherry-pick --abort'
alias gcpc='git cherry-pick --continue'
alias gd='git diff'
alias gf='git fetch'
alias gfo='git fetch origin'
alias gl='git pull'
alias glog='git log --oneline --decorate --graph'
alias gp='git push'
alias gpf='git push --force-with-lease'
alias gpr='git pull --rebase'
alias grb='git rebase'
alias grba='git rebase --abort'
alias grbc='git rebase --continue'
alias grh='git reset --hard'
alias gst='git status'
alias gstaa='git stash apply'
alias gstall='git stash'

# List overrides
alias la='ls -lisa --color=auto -a'
alias ll='ls -lisa --color=auto'
alias ln='ln -i'
alias lt='ls --human-readable --size -1 -S --classify'

# Tar aliases
alias tarup='tar czvf'
alias untar='tar -zxvf'

# Grep aliases
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'

# Weather aliases
alias weather='curl wttr.in/Zagreb'

# Show/hide hidden files in finder
alias hide='defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder'
alias show='defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder'

# Process management
alias psg='ps aux | grep'
alias pkill='kill -9'

# File management
alias count='find . -type f | wc -l'
alias f='find . | grep '
alias most='du -hsx * | sort -rh | head -10'

# Directory management
alias cpwd='pwd | tr -d "\n" | pbcopy'
alias rmf='rm -rf'

# Disk management
alias df='df -H'
alias du='du -ch'
alias lsd='diskutil list'
alias mnt='mount | column -t'

# User and permissions
alias own='sudo chown -R $USER'
alias chmodme='sudo chmod -R $USER'

# System and environment
alias path='echo -e ${PATH//:/\\n}'
alias reload='exec ${SHELL} -l'

# Security and hashing
alias md5='md5 -q'
alias sha='shasum -a 256'
alias sha512='shasum -a 512'

# Date and time
alias timestamp='date +%Y-%m-%dT%H-%M-%S'
alias week='date +%V'

# Macos
alias app='open /Applications'
alias bat='ioreg -l | grep -i capacity'
alias cal='ncal -bM'
alias chrome='/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome'
alias cleandns='sudo killall -HUP mDNSResponder'
alias drives='diskutil list'
alias finder='open'
alias restartmenu='killall -KILL SystemUIServer'
alias rmlogs='sudo rm -rf /private/var/log/*'
alias rmtrash='sudo rm -rf ~/.Trash/*'
alias sys='system_profiler SPHardwareDataType'
alias update='sudo softwareupdate -i -a'
alias version="sw_vers -productVersion"
alias wifi='/System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport -I'

# Network
alias localip='ipconfig getifaddr en0'
alias portcheck='nc -zv'

# Dotfiles
alias dotfiles='git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

# Editors
alias a='aqua'
alias c='code'
alias r='rustrover'
alias v='vim'
alias w='webstorm'
